<h1>New Ads</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for ads</p>
    <ul>
      <li>Dope.</li>
      <li>Make it dope.</li>
      <li>Don't make it not dope.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter ad title' %>
      </div>
      <div class="form-group">
       <%= f.label :copy %>
       <%= f.text_area :copy, class: 'form-control', rows: '8', placeholder: 'Enter ad copy' %>
      </div>
      <div class="form-group">
       <%= f.label :price %>
       <%= f.text_field :price, class: 'form-control', placeholder: 'Enter price' %>
      </div>
      <div class="form-group">
       <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
     <% end %>
  </div>
</div>
